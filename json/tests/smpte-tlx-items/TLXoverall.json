[ {
    "description": "TLX overall vigorous test suite",
    "schema": {
        "$schema": "http://json-schema.org/draft-07/schema",
        "$id": "test/TLXoverall",
        "$ref": "http://smpte-ra.org/2120/2/2021/smpte-tlx-items"
    },
    "tests": [
        {
            "description": "empty TLX",
            "data": { },
            "valid": false
        },
        {
            "description": "timestamp item only TLX",
            "data": { "TLXptpTimestamp": { "ptpTime": [ 1234567890, 123456789] } },
            "valid": true
        },
        {
            "description": "media count item only TLX",
            "data": { "TLXmediaCount": { "count": 300 } },
            "valid": true
        },
        {
            "description": "unique source ID only TLX",
            "data": { "TLXuniqueSourceID": { "sourceID": "931b76bc-5493-4aed-9f4a-eb3d21c496bc" } },
            "valid": true
        },
        {
            "description": "timecode item only TLX",
            "data": { "TLXst12": { "timeAddress": [ 1, 2, 3, 23 ] } },
            "valid": true
        },
        {
            "description": "source name item only TLX",
            "data": { "TLXsourceName": { "name": "Tape 001" } },
            "valid": true
        },
        {
            "description": "runtime item only TLX",
            "data": { "TLXmediaUnitRuntime": { "runtime": [ 1, 50] } },
            "valid": true
        },
       {
            "description": "unknown item only",
            "data": { "TLXnewItem": { "magicNumber": 2, "important": true } },
            "valid": false
        },
       {
           "description": "timestamp item + unknown item TLX",
           "data": { "TLXptpTimestamp": { "ptpTime": [ 1234567890, 123456789] },
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       },
       {
           "description": "media count item + unknown item TLX",
           "data": { "TLXmediaCount": { "count": 300 },
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       },
       {
           "description": "unique source ID + unknown item TLX",
           "data": { "TLXuniqueSourceID": { "sourceID": "931b76bc-5493-4aed-9f4a-eb3d21c496bc" },
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       },
       {
           "description": "timecode item + unknown item TLX",
           "data": { "TLXst12": { "timeAddress": [ 1, 2, 3, 23 ] },
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       },
       {
           "description": "source name item + unknown item TLX",
           "data": { "TLXsourceName": { "name": "Tape 001" } ,
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       },
       {
           "description": "runtime item + unknown item TLX",
           "data": { "TLXmediaUnitRuntime": { "runtime": [ 1, 50] } ,
               "TLXnewItem": { "magicNumber": 2, "important": true }
           },
           "valid": true
       }
    ]
} ]
