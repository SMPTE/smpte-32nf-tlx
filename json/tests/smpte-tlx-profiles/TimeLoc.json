{
    "description": "TimeLoc profile vigorous test suite",
    "schema": {
        "$id": "test/TimeLoc",
        "$schema": "http://json-schema.org/draft-07/schema",
        "allOf": [
            { "$ref": "http://smpte-ra.org/2120/3/2021/smpte-tlx-profiles#$defs/TimeLoc" },
            { "$ref": "http://smpte-ra.org/2120/2/2021/smpte-tlx-items" }
        ]
     },
    "tests": [
        {
            "description": "empty TLX",
            "TLX": { },
            "valid": false
        },
        {
            "description": "exemplar TimeLoc",
            "TLX": {
                "TLXptpTimestamp": {
                    "ptpTime": [ 1234567890, 123456789],
                    "currentLocalOffset": -25163
                }
            },
            "valid": true
        },
        {
            "description": "exemplar TimeLoc + leap second",
            "TLX": {
                "TLXptpTimestamp": {
                    "ptpTime": [ 1234567890, 123456789],
                    "currentLocalOffset": -25163,
                    "leapSecondEvent": false
                }
            },
            "valid": true
        },
        {
            "description": "exemplar TimeLoc + extra",
            "TLX": {
                "TLXptpTimestamp": {
                    "ptpTime": [ 1234567890, 123456789],
                    "currentLocalOffset": -25163,
                    "extra": "always"
                }
            },
            "valid": true
        },
        {
            "description": "simple timestamp",
            "TLX": { "TLXptpTimestamp": {
                "ptpTime": [ 1234567890, 123456789] }
            },
            "valid": false
        }

    ]
}


